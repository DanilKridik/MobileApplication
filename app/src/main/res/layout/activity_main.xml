<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Memory"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/MemoryValue"
                android:layout_weight="2"
                android:hint="Введите цену" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="GraphicCard"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/GraphicCardValue"
                android:layout_weight="2"

                android:hint="Введите цену" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="MotherBoard"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/MotherBoardValue"
                android:layout_weight="2"
                android:hint="Введите цену"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="CPU"
                android:textSize="18dp" />

            <EditText
                android:layout_weight="2"
                android:id="@+id/CPUValue"
                android:hint="Введите цену" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="PowerUnit"
                android:textSize="18dp" />

            <EditText
                android:layout_weight="2"
                android:id="@+id/PowerUnitValue"
                android:hint="Введите цену" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="RAM"
                android:textSize="18dp" />

            <EditText
                android:layout_weight="2"
                android:id="@+id/RAMValue"

                android:hint="Введите цену" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/CalculateValue"
            android:text="Посчитать"
            android:layout_weight="1"
            android:onClick="calculateValue"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/summaryValue"
                />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>